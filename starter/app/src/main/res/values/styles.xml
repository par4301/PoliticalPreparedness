<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button_style">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">@dimen/default_padding</item>
    </style>

    <style name="title_header_style" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:layout_margin">@dimen/default_padding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title_header_size</item>
    </style>

    <style name="title_sub_header_style" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title_sub_header_size</item>
    </style>

    <style name="representative_list_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/short_padding</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="web_address_icon_style">
        <item name="android:layout_width">@dimen/address_icon_size</item>
        <item name="android:layout_height">@dimen/address_icon_size</item>
        <item name="android:layout_marginEnd">@dimen/default_padding</item>
        <item name="android:layout_marginBottom">@dimen/default_padding</item>
        <item name="android:contentDescription">@string/web_address_description</item>
        <item name="android:visibility">gone</item>
    </style>
</resources>
